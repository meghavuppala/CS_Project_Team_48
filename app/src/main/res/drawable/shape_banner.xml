<!-- horizontal_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent rectangle to specify the size -->
    <item android:width="700dp" android:height="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Actual shape with a colored rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#34C6C6" /> <!-- Fill color -->
            <stroke android:color="#34C6C6" android:width="1dp" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
